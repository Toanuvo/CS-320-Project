{
	"extends": "airbnb-base",
	"parserOptions": {
		"ecmaVersion": 6,
		"sourceType": "module"
	},
	"rules": {
    "max-classes-per-file": ["error", 20],
    "max-len": ["error", 120],
		"no-console": "off",
		"prefer-arrow-callback": "off",
		"no-plusplus": "off",
		"linebreak-style": "off",
		"func-names": "off",
		"no-restricted-syntax": "off",
    "no-use-before-define": "off"
	},
	"globals": {
    "document": true,
    "localStorage": true,
		"_": true
	}
}
